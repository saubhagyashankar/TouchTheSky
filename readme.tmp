#How to run python scripts from nodejs

#my_script.py
import sys

if len(sys.argv) > 1:
    input_arg = sys.argv[1]
    print(f"Hello, {input_arg}!")
else:
    print("Hello from Python!")


#run_python.js
const { spawn } = require("child_process");

const inputArg = "John Doe";

// Replace 'python3' with 'python' if you are on Windows or if you are using Python 2.x
const pythonProcess = spawn("python3", ["my_script.py", inputArg]);

pythonProcess.stdout.on("data", (data) => {
  console.log(`Python output: ${data}`);
});

pythonProcess.stderr.on("data", (data) => {
  console.error(`Python error: ${data}`);
});

pythonProcess.on("close", (code) => {
  console.log(`Python script exited with code ${code}`);
});


#run node server
node run_python.js

